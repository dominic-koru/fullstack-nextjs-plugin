{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}\"/scripts/pre-commit-validation.sh",
            "timeout": 120
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}\"/scripts/protect-migrations.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}\"/scripts/format-and-lint.sh",
            "timeout": 45
          },
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}\"/scripts/auto-test.sh",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}\"/scripts/log-bash-commands.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
